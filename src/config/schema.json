{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration Schema",
  "type": "object",
  "properties": {
    "logPath": {
      "type": "string"
    },
    "store": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["memory", "file"]
        }
      },
      "required": ["type"]
    },
    "lmStudioEndpoint": {
      "type": "string"
    }
  },
  "required": ["logPath", "store", "lmStudioEndpoint"]
}